<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin">
    <ImageView
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:id="@+id/logo"
        android:layout_centerHorizontal="true"
        android:background="@drawable/arubalogo"
        />
    <TextView
        android:id="@+id/showdata"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/logo"
        android:textSize="20sp" />

    <Button
        android:id="@+id/placeorder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/showdata"
        android:layout_marginStart="17dp"
        android:onClick="place_order"
        android:text="Place  Order"
        android:textColor="@color/mainTextColor"
        android:background="@drawable/mybutton"
        android:textSize="12sp"
        tools:ignore="RtlCompat" />

    <Button
        android:id="@+id/updateoperator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/placeorder"
        android:layout_marginEnd="14dp"
        android:background="@drawable/mybutton"
        android:textColor="@color/mainTextColor"
        android:onClick="send_notify_to_operator"
        android:text="Notify Operator"
        android:textSize="12sp"
        tools:ignore="RtlCompat" />
    <!--  android:background="@color/btnRequest"-->
</RelativeLayout>